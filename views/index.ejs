<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Dashboard - Admin</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/css/icons.min.css" />
    <link rel="stylesheet" href="/assets/css/app.min.css" />
</head>

<body data-sidebar="dark">
    <div id="layout-wrapper">

        <!-- Navbar -->
        <%- include('partials/navbar'); %>

            <!-- Sidebar -->
            <%- include('partials/sidebar'); %>

                <!-- Main Content -->
                <div class="main-content">
                    <div class="page-content">
                        <div class="container-fluid">

                            <div class="row">
                                <div class="col-12">
                                    <h4 class="mb-4">Selamat Datang di Toko Buah & Sayur!</h4>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="card mini-stats-wid">
                                                <div class="card-body">
                                                    <div class="d-flex">
                                                        <div class="flex-grow-1">
                                                            <p class="text-muted fw-medium">Total Pengguna</p>
                                                            <h4 class="mb-0" id="totalUser">...</h4>
                                                        </div>
                                                        <div class="flex-shrink-0 align-self-center">
                                                            <i class="ri-user-line font-size-24 text-primary"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="card mini-stats-wid">
                                                <div class="card-body">
                                                    <div class="d-flex">
                                                        <div class="flex-grow-1">
                                                            <p class="text-muted fw-medium">Total Barang</p>
                                                            <h4 class="mb-0" id="totalBarang">...</h4>
                                                        </div>
                                                        <div class="flex-shrink-0 align-self-center">
                                                            <i
                                                                class="ri-shopping-basket-line font-size-24 text-success"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="card mini-stats-wid">
                                                <div class="card-body">
                                                    <div class="d-flex">
                                                        <div class="flex-grow-1">
                                                            <p class="text-muted fw-medium">Transaksi</p>
                                                            <h4 class="mb-0" id="totalTransaksi">...</h4>
                                                        </div>
                                                        <div class="flex-shrink-0 align-self-center">
                                                            <i class="ri-exchange-line font-size-24 text-warning"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Footer -->
                    <%- include('partials/footer'); %>
                </div>
    </div>

    <script>
        // Misal fetch data dari API, ini placeholder
        fetch('/api/users')
            .then(res => res.json())
            .then(data => document.getElementById('totalUser').innerText = data.length);

        // fetch('/api/barang')
